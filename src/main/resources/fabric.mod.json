{
  "schemaVersion": 1,
  "id": "telemine",
  "version": "${version}",

  "name": "Minecraft Server Telegram Bot",
  "description": "A mod to connect your MineCraft server to a telegram bot and do lots of things in your Telegram group!",
  "authors": [
    "Parsa Shahmaleki"
  ],
  "contact": {
    "homepage": "https://github.com/Dirty-Craft/telemine/",
    "sources": "https://github.com/Dirty-Craft/telemine/"
  },

  "license": "CC0-1.0",
  "icon": "assets/telemine/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.dirtycraft.telemine.Telemine"
    ]
  },
  "mixins": [
    "telemine.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.10",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
